<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"

    android:background="#21FFC107"
    tools:context=".VerificationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:src="@drawable/recieve"
        android:layout_marginTop="90dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="OTP Verification"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:textColor="@color/colortextsecond"
            android:textSize="14sp"

            android:text="Enter otp recieved on "
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/textMobileShow"
            android:textColor="@color/colortextsecond"
            android:textSize="14sp"

            />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:orientation="horizontal"
    >

<EditText
    android:layout_width="40dp"
    android:layout_height="46dp"
    android:id="@+id/inputOTP1"
    android:imeOptions="actionNext"
    android:importantForAutofill="no"
    android:inputType="number"
    android:maxLength="1"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="24sp"
    android:textStyle="bold"
    tools:ignore="LabelFor"

    android:background="@drawable/backgroud_box"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:gravity="center"

        android:id="@+id/inputOTP2"
        android:layout_marginStart="4dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="LabelFor"

        android:background="@drawable/backgroud_box"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:gravity="center"

        android:id="@+id/inputOTP3"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="LabelFor"

        android:background="@drawable/backgroud_box"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:id="@+id/inputOTP4"
        android:layout_marginStart="4dp"
        android:gravity="center"

        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="LabelFor"

        android:background="@drawable/backgroud_box"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:gravity="center"

        android:id="@+id/inputOTP5"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="LabelFor"

        android:background="@drawable/backgroud_box"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:gravity="center"

        android:id="@+id/inputOTP6"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="LabelFor"

        android:background="@drawable/backgroud_box"/>

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did'nt recieved the code"
                android:textColor="@color/colortextsecond"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resend_otp"
                android:text="Resend Otp"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />








        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Submit"
            android:id="@+id/submitButton"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/background_buttonn"
            />




    </LinearLayout>






</ScrollView>